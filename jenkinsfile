pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = 'docker-hub-credentials' 
        DOCKER_IMAGE = 'yerubandiram/microserviceb'
        GITHUB_REPO = 'https://github.com/ramyerubandi1/microservicesalary.git'
        GIT_BRANCH = 'main' 
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    
                    echo "Checking out repository from ${env.GITHUB_REPO} branch ${env.GIT_BRANCH}"
                    
                    
                    checkout([$class: 'GitSCM',
                        branches: [[name: "*/${env.GIT_BRANCH}"]],
                        userRemoteConfigs: [[url: "${env.GITHUB_REPO}"]]
                    ])
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def customImage = docker.build("${env.DOCKER_IMAGE}:latest")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${env.DOCKER_CREDENTIALS_ID}") {
                        def customImage = docker.image("${env.DOCKER_IMAGE}:latest")
                        customImage.push('latest')
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
